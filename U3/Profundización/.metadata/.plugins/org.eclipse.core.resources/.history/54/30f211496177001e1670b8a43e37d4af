package principal;



public class App {

	public static void main(String[] args) {
		
		int filas=6;
		
		int asteriscos=2;
		int asteriscosUltimaFila = (int) Math.pow(2, filas);
		for (int i = 1; i <=filas; i++) {
			
			int blancos = (asteriscosUltimaFila - asteriscos)/2;
			for (int j = 1; j <=blancos; j++) {
				System.out.print(" ");
			}
			
			for (int j = 1; j <=asteriscos; j++) {
				System.out.print("*");
			}
			System.out.println();
			asteriscos*=2;
		}
		

	}

}
